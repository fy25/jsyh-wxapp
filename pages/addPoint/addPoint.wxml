<view class="logo">
    <image src="/images/logo.png" />
</view>
<view class="form">
    <view>
        <picker bindchange="branchTap" value="{{index}}" range="{{branchTextList}}">
            <view class="picker">
                <view class="title">选择区域:   {{branchTextList[index]}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view>
        <picker bindchange="statehTap" value="{{stateIndex}}" range="{{stateTextlist}}">
            <view class="picker">
                <view class="title">选择状态:   {{stateTextlist[stateIndex]}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view class="form-input">
        <input type="text" placeholder="在此添加标点名称" bindinput='nameInput' />
    </view>
    <view class="form-textarea">
        <textarea placeholder="在此添加备注（选填）" bindinput='tipInput'></textarea>
    </view>
    <upload-img bind:myevent="chooseImg" bind:deleteTap="deleteTap"></upload-img>
    <button class="submit" catchtap="submitTap">提交标点</button>
</view>