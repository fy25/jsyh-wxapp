<view class="logo">
    <image src="/images/logo.png" />
</view>
<view class="form">
    <view class="form-input">
        <input type="text" placeholder="在此添加标题" bindinput='titleInput' />
    </view>
    <view>
        <picker bindchange="startTap" mode="date" value="{{Begin_Date}}">
            <view class="picker">
                <view class="title">开始时间: {{Begin_Date}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view>
        <picker bindchange="endTap" mode="date" value="{{End_Date}}">
            <view class="picker">
                <view class="title">结束时间: {{End_Date}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view>
        <picker bindchange="statehTap" value="{{stateIndex}}" range="{{stateTextlist}}">
            <view class="picker">
                <view class="title">选择状态: {{stateTextlist[stateIndex]}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view class="form-textarea">
        <textarea placeholder="在此添加活动内容" bindinput='contentInput'></textarea>
    </view>
    <upload-img bind:myevent="chooseImg" bind:deleteTap="deleteTap"></upload-img>
