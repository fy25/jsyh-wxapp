<view class="logo">
    <image src="/images/logo.png" />
</view>

<view class="form">
    <view class="form-input">
        <input type="text" placeholder="在此添加标题" />
    </view>
    <view class="form-textarea">
        <textarea placeholder="在此添加标记内容"></textarea>
    </view>
    <view class="img-list">
        <view wx:for="{{tempFilePaths}}" wx:key="*">
            <image src="{{item}}" />
        </view>
        <view>
            <view class="add-btn" catchtap="chooseImg">
                <text>+</text>
                <text>添加照片</text>
            </view>
        </view>
    </view>
    <button class="submit" catchtap="submitTap">提交标记</button>
</view>