<view class='main'>
  <view wx:for='{{act_array}}' wx:key='{{index}}' class='item' bindtap='showDetail'>
    <view class='head'>
      <view class='left'>
        <image src='{{item.IMG_1}}'></image>
        <view>{{item.CREATEUSERNAME}}</view>
      </view>
      <view class='right'>{{item.CREATEDATE}}</view>
    </view>
    <view class='body'>
      <view class='title'>{{item.ACTIVITY_NAME}}</view>
      <view class='content'>
        <text>{{item.REMARK}}</text>
      </view>
      <view class='images'>
        <image mode='aspectFill' src='{{item.IMG_1}}'></image>
        <image mode='aspectFill' src='{{item.IMG_2}}'></image>
        <image mode='aspectFill' src='{{item.IMG_3}}'></image>
      </view>
      <view class="btn-group">
        <button style="background:#ff4949" id="{{item.ACTIVITY_ID}}" catchtap="deleteTap">
          删除活动
        </button>
        <button style="background:#0269B8" id="{{item.ACTIVITY_ID}}" catchtap="visitorTap">
          查看访客
        </button>
      </view>
    </view>
  </view>
</view>