<view class="logo">
    <image src="/images/logo.png" />
</view>
<view class="form">
    <view class="form-input">
        <input type="text" placeholder="请输入访客名称" bindinput='titleInput' />
    </view>
    <view class="form-input">
        <input type="text" placeholder="请输入访客电话" bindinput='telInput' />
    </view>
    <view>
        <picker bindchange="statehTap" value="{{stateIndex}}" range="{{stateTextlist}}">
            <view class="picker">
                <view class="title">选择状态:   {{stateTextlist[stateIndex]}}</view>
                <view>
                    <image src="/images/arrow-right.png" />
                </view>
            </view>
        </picker>
    </view>
    <view class="form-textarea">
        <textarea placeholder="在此添加活动内容" bindinput='contentInput'></textarea>
    </view>
    <view class="img-list">
        <view wx:for="{{tempFilePaths}}" wx:key="*">
            <image src="{{item}}" />
        </view>
        <view>
            <view class="add-btn" catchtap="chooseImg">
                <text>+</text>
                <text>添加照片</text>
            </view>
        </view>
    </view>
    <button class="submit" catchtap="submitTap">提交活动</button>
</view>