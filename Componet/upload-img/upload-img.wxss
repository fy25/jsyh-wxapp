.img-list {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding: 24rpx 0;
}

.img-list>view {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 0 0 20%;
    margin: 10rpx 0;
}

.img-item {
    position: relative;
}

.delete {
    position: absolute;
    right: 0;
    top: -16rpx;
}

.img-list>view image {
    width: 100rpx;
    height: 100rpx;
}

.add-btn {
    width: 100rpx;
    height: 100rpx;
    border: 1px dashed #999999;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.add-btn text {
    font-size: var(--fs24);
    color: #999;
}

.add-btn text:first-child {
    font-size: var(--fs40);
}